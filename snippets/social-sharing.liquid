<ul class="social-sharing list-inline">

  {% if settings.share_facebook %}
    <li class="list-inline-item">
      <a class="d-flex align-items-center py-1 px-1 text-secondary text-decoration-none" target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
        {% include 'icon-facebook' %}
        <span class="pl-2" aria-hidden="true">{{ 'social.share_on_facebook' | t }}</span>
        <span class="sr-only">{{ 'social.alt_text.share_on_facebook' | t }}</span>
      </a>
    </li>
  {% endif %}

  {% if settings.share_twitter %}
  <li class="list-inline-item">
      <a class="d-flex align-items-center py-1 px-1 text-secondary text-decoration-none" target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}">
        {% include 'icon-twitter' %}
        <span class="pl-2" aria-hidden="true">{{ 'social.share_on_twitter' | t }}</span>
        <span class="sr-only">{{ 'social.alt_text.share_on_twitter' | t }}</span>
      </a>
    </li>
  {% endif %}

  {% if settings.share_pinterest %}
    <li class="list-inline-item">
      <a class="d-flex align-items-center py-1 px-1 text-secondary text-decoration-none" target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}">
        {% include 'icon-pinterest' %}
        <span class="pl-2" aria-hidden="true">{{ 'social.share_on_pinterest' | t }}</span>
        <span class="sr-only">{{ 'social.alt_text.share_on_pinterest' | t }}</span>
      </a>
    </li>
  {% endif %}

</ul>
