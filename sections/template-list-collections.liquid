            "default": 0
        },
        {
            "type": "range",
            "id": "mb",
            "label": "Margin bottom",
            "min": 0,
            "max": 20,
            "step": 1,
            "default": 0
        }
    ],
    "templates": ["list-collections"], 
    "presets": [
        {
            "name": "List collections",
            "category": "List collections"
        }
    ]
}
{% endschema %}