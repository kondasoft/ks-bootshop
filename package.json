{
    "scripts": {
        "watch": "npm-watch",
        "bs-css": "sass --no-source-map src/bootstrap.scss:assets/bootstrap.css && postcss assets/bootstrap.css --replace --no-map --use autoprefixer",
        "bs-js": "cp node_modules/bootstrap/dist/js/bootstrap.bundle.min.js assets/"
    },
    "watch": {
        "bs-css": {
            "patterns": [
                "src"
            ],
            "extensions": "scss",
            "runOnChangeOnly": true
        }
    },
    "dependencies": {
        "bootstrap": "^5.1.3"
    },
    "devDependencies": {
        "@types/bootstrap": "^5.1.10",
        "autoprefixer": "^10.4.7",
        "caniuse-lite": "^1.0.30001334",
        "eslint": "^8.14.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-n": "^15.2.0",
        "eslint-plugin-promise": "^6.0.0",
        "npm-watch": "^0.11.0",
        "postcss": "^8.4.13",
        "sass": "^1.51.0"
    }
}
